mixin techBadge(file, title, stars, desc)
  .logo
    img(src="svg/tech/#{file}.svg")
    .overlay
      .inner
        h5= title
        .stars
          svg.star(viewBox="0 0 32 32")
            use(xlink:href="#StarFill")
          if (stars == 1)
            svg.star(viewBox="0 0 32 32")
              use(xlink:href="#StarOutline")
          else
            svg.star(viewBox="0 0 32 32")
              use(xlink:href="#StarFill")
          if (stars < 3)
            svg.star(viewBox="0 0 32 32")
              use(xlink:href="#StarOutline")
          else
            svg.star(viewBox="0 0 32 32")
              use(xlink:href="#StarFill")
        h6= desc
mixin alsoMade(file, company, summary)
  .logo
    img(src="svg/logos/#{file}.svg" alt="#{company}")
    .overlay
      .inner
        h5= company
        summary= summary